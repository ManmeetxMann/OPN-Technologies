{
	"name": "root",
	"private": true,
	"scripts": {
		"clean-all": "lerna clean --yes && lerna run clean",
		"lint-all": "eslint 'packages/**/**/*.ts' 'migrations/**/*.ts' 'tools/**/*.ts' --ignore-path .gitignore --max-warnings=0",
		"lint-fix-all": "eslint 'packages/**/**/*.ts' 'migrations/**/*.ts' 'tools/**/*.ts' --ignore-path .gitignore --max-warnings=0 --fix",
		"test-all": "lerna run test --stream",
		"test:coverage-all": "lerna run test:coverage --stream",
		"install-all": "lerna bootstrap --hoist",
		"initialize-all": "lerna run initialize --stream",
		"dev-all": "lerna run dev --stream",
		"dev-all:local": "lerna run dev:local --stream",
		"dev:debug-all": "lerna run dev:debug --stream",
		"build-all": "lerna run build --stream",
		"deploy-all": "lerna run deploy --stream",
		"emulate-firebase": "cd firebase-emulation && firebase emulators:start --only firestore,pubsub --import=./rawState/",
		"save-firebase": "cd firebase-emulation && firebase emulators:export",
		"cd-build-registry": "lerna run --scope @opn/registry build --stream",
		"cd-build-passport": "lerna run --scope @opn/passport build --stream",
		"cd-build-enterprise": "lerna run --scope @opn/enterprise build --stream",
		"cd-build-config": "lerna run --scope @opn/config build --stream",
		"cd-build-lookup": "lerna run --scope @opn/lookup build --stream",
		"cd-build-access": "lerna run --scope @opn/access build --stream",
		"cd-build-apidocs": "lerna run --scope @opn/apidocs build --stream",
		"cd-build-reservation": "lerna run --scope @opn/reservation build --stream",
		"cd-deploy-registry": "lerna run --scope @opn/registry gcloud_deploy --stream",
		"cd-deploy-passport": "lerna run --scope @opn/passport gcloud_deploy --stream",
		"cd-deploy-enterprise": "lerna run --scope @opn/enterprise gcloud_deploy --stream",
		"cd-deploy-config": "lerna run --scope @opn/config gcloud_deploy --stream",
		"cd-deploy-lookup": "lerna run --scope @opn/lookup gcloud_deploy --stream",
		"cd-deploy-access": "lerna run --scope @opn/access gcloud_deploy --stream",
		"cd-deploy-reservation": "lerna run --scope @opn/reservation gcloud_deploy --stream",
		"cd-deploy-apidocs": "lerna run --scope @opn/apidocs gcloud_deploy --stream",
		"cd-deploy-tools-pages": "lerna run --scope @opn/tools-pages deploy --stream"
	},
	"devDependencies": {
		"@types/jest": "^26.0.4",
		"@types/node": "^15.0.1",
		"@types/supertest": "^2.0.10",
		"@typescript-eslint/eslint-plugin": "^4.17.0",
		"@typescript-eslint/parser": "^4.17.0",
		"babel-cli": "^6.26.0",
		"babel-preset-env": "^1.7.0",
		"eslint": "^7.21.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-prettier": "^3.3.1",
		"firebase-tools": "^9.5.0",
		"jest": "^26.1.0",
		"lerna": "^4.0.0",
		"node-fetch": "^2.6.0",
		"prettier": "^2.2.1",
		"superagent": "^6.1.0",
		"supertest": "^6.1.3",
		"ts-node": "^9.1.1",
		"typescript": "^4.2.3",
		"unique-names-generator": "4.4.0"
	}
}
