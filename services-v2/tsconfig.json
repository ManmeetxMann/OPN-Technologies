{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@opn-services/test/*": ["libs/test/*"],
      "@opn-services/common": ["libs/common/src"],
      "@opn-services/common/*": ["libs/common/src/*"],
      "@opn-services/cart/*": ["apps/cart-service/src/*"],
      "@opn-common-v1/*": ["../packages/common/src/*"],
      "@opn-reservation-v1/*": ["../packages/reservation/src/*"],
      "@opn-enterprise-v1/*": ["../packages/enterprise/src/*"]
    }
  }
}
