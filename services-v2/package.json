{
  "name": "opn-services",
  "version": "0.0.1",
  "description": "NestJS with SQL database micro-services API for OPN mobile and web",
  "author": "OPN Technologies Inc",
  "private": true,
  "license": "Appropriate",
  "scripts": {
    "prebuild": "rimraf dist",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/opn-services/main",
    "lint": "eslint --config ./.eslintrc.js --resolve-plugins-relative-to . \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/opn-services/test/jest-e2e.json",
    "build:all": "npm run build:user-service && npm run build:cart-service",
    "build:user-service": "SERVICE=user-service npm run build:service",
    "build:cart-service": "SERVICE=cart-service npm run build:service",
    "build:service": "nest build $SERVICE && cp ./package.json ./dist/apps/$SERVICE/ && cp ./.env ./dist/apps/$SERVICE/ && cp ./.env ./dist/",
    "deploy:user-service": "gcloud app deploy ./dist/apps/user-service",
    "deploy:cart-service": "gcloud app deploy ./dist/apps/cart-service",
    "migration:migrate-users-to-mysql": "ts-node --transpile-only ./node_modules/typeorm/cli.js migration:run"
  },
  "dependencies": {
    "@firestore-simple/admin": "^7.0.6",
    "@google-cloud/firestore": "^4.2.0",
    "@google-cloud/logging-bunyan": "^3.0.2",
    "@google-cloud/pubsub": "^2.3.0",
    "@google-cloud/storage": "^5.4.0",
    "@google-cloud/tasks": "^2.1.2",
    "@google-cloud/trace-agent": "^5.1.3",
    "@nestjs/common": "^7.0.0",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/platform-express": "^7.0.0",
    "@nestjs/platform-fastify": "^7.6.15",
    "@nestjs/swagger": "^4.6.0",
    "@nestjs/typeorm": "^7.1.4",
    "bunyan": "^1.8.15",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.13.1",
    "dotenv": "^8.2.0",
    "fastify-swagger": "^4.6.0",
    "firebase-admin": "^9.6.0",
    "lodash": "^4.17.21",
    "mysql": "^2.18.1",
    "nanoid": "^3.1.12",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "stripe": "^8.144.0",
    "swagger-ui-express": "^4.1.4",
    "typeorm": "^0.2.26"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/bunyan": "^1.8.6",
    "@types/express": "^4.17.3",
    "@types/jest": "26.0.10",
    "@types/node": "^13.9.1",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "3.9.1",
    "@typescript-eslint/parser": "3.9.1",
    "eslint": "7.7.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^5.0.0",
    "jest": "26.4.2",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "26.2.0",
    "ts-loader": "^6.2.1",
    "ts-node": "9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@opn-services/common/(.*)": "<rootDir>/libs/common/src/$1",
      "@opn-services/common": "<rootDir>/libs/common/src",
      "@opn-common-v1/(.*)": "<rootDir>/../packages/common/src/$1",
      "@opn-common-v1": "<rootDir>/../packages/common/src",
      "^@opn-enterprise-v1/(.*)$": "<rootDir>../packages/enterprise/src/$1"
    }
  }
}
