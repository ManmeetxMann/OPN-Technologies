<div class="container  mt-5">
    <form action="/admin/page/appointment-by-bar-code" method="POST">
    <div class="form-group">
        <label for="barCodeNumber">Bar Code Number</label>
        <input type="text" class="form-control" id="barCodeNumber" name="barCodeNumber" placeholder="Enter Bar Code Number" value="{{barCodeNumber}}">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
<div class="container mt-5">
    <h2>Appointment Details</h2>
    {{#if invalidBarCodeNumber}}
        <div class="alert alert-danger" role="alert">
        No Appointment details are available 
        </div>
    {{else}}
        <div class="row">
            <div class="col">
            First Name
            </div>
            <div class="col">
            {{firstName}}
            </div>

            <div class="w-100"></div>
            <div class="col">
            Last Name
            </div>
            <div class="col">
            {{lastName}}
            </div>
        
            <div class="w-100"></div>
            <div class="col">
            Email
            </div>
            <div class="col">
            {{email}}
            </div>
        
            <div class="w-100"></div>
            <div class="col">
            Phone Number
            </div>
            <div class="col">
            {{phone}}
            </div>
        </div>
    {{/if}}
</div>